extends ../layouts/app

include ../mixins/error-alert

block app-content
    h1(class="title") New transaction
    p(class="subtitle") 16/03/2024
    +error-alert('create-transaction-error')
    form(action="/transactions/create" method="post") 
        div(class="field is-grouped")
            div(class="control")
                div(class="select")
                    select(name="type")
                        option(value="income") Income
                        option(value="expense") Expense
            div(class="control")
                input(class="input" type="text" placeholder="Category" name="category")
        div(class="field")
            label(class="label") Amount
            div(class="control")
                input(class="input" type="number" name="amount" placeholder="Amount")
        div(class="field")
            label(class="label") Description
            div(class="control")
                textarea(class="textarea" placeholder="Description")
        div(class="field is-grouped")
            div(class="control")
                button(class="button is-primary") Save
            div(class="control")
                a(href="/" class="button") Cancel